<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/head_title" />

    <LinearLayout
        android:id="@+id/ll_scan_shoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_scan_shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/loadingpic" />

            <TextView
                android:id="@+id/tv_scanshoes_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y21"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y21"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_stand_posture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/bind_stress_stand" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_stand_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通过"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_stand_tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“站一站”"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_stand_tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可知道"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_stand_tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="姿态正常/异常"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_stand_guidance"
                    android:layout_width="@dimen/y313"
                    android:layout_height="@dimen/y104"
                    android:background="@drawable/conner_solid_green_grass_rectangle_radius_3dp"
                    android:text="查看教程"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_stand_start_tip"
                    android:layout_width="@dimen/y313"
                    android:layout_height="@dimen/y104"
                    android:background="@drawable/conner_blue_rectangle_radius_3dp"
                    android:text="跳过教程"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stand_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y21"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="检测中需注意"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="@dimen/y63"
                android:paddingRight="@dimen/y63"
                android:paddingTop="@dimen/y63"
                android:text="1 请双眼目视前方，双手自然下垂，双腿自然站立的检测姿势\n2 检测中，双腿请勿移动与滑动\n3 检测中，请勿做其他刻意的动作。如挺胸耸肩等"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="贴心提示"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="@dimen/y63"
                android:paddingRight="@dimen/y63"
                android:paddingTop="@dimen/y63"
                android:text="身体状态良好\n不能安全独立完成所要求动作时，要注意予以保护以免摔到，必要时给予帮助"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_stand_start_countdown_tip"
                    android:layout_width="@dimen/y313"
                    android:layout_height="@dimen/y104"
                    android:background="@drawable/conner_blue_rectangle_radius_3dp"
                    android:text="开始测试"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stand_countdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_stand_countdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/squat_countdown3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_stand_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_grass"
                android:gravity="center"
                android:padding="@dimen/y21"
                android:text="预备"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_foot_print"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/ll_shoepic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.6"
            android:weightSum="2" >

            <RelativeLayout
                android:id="@+id/fl_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <cn.com.amome.amomeshoes.widget.MyView
                        android:id="@+id/canves_left"
                        android:layout_width="@dimen/y290"
                        android:layout_height="@dimen/y834"
                        android:layout_centerHorizontal="true" />

                    <cn.com.amome.amomeshoes.widget.StandLineView
                        android:id="@+id/cv_draw_left_divide_line"
                        android:layout_width="@dimen/y290"
                        android:layout_height="@dimen/y834"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/iv_left_cop"
                        android:layout_width="@dimen/y42"
                        android:layout_height="@dimen/y42"
                        android:scaleType="fitCenter"
                        android:src="@drawable/my_secret_redpoint"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <cn.com.amome.amomeshoes.widget.MyView
                        android:id="@+id/canves_right"
                        android:layout_width="@dimen/y290"
                        android:layout_height="@dimen/y834"
                        android:layout_centerHorizontal="true" />

                    <cn.com.amome.amomeshoes.widget.StandLineView
                        android:id="@+id/cv_draw_right_divide_line"
                        android:layout_width="@dimen/y290"
                        android:layout_height="@dimen/y834"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/iv_right_cop"
                        android:layout_width="@dimen/y42"
                        android:layout_height="@dimen/y42"
                        android:scaleType="fitCenter"
                        android:src="@drawable/my_secret_redpoint"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_test_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_grass"
                android:gravity="center"
                android:padding="@dimen/y21"
                android:text="检测中"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>