<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="@dimen/y618"
            android:layout_height="@dimen/y618"
            android:layout_below="@+id/rl_exercise_bind"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/exercise_1_background" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_with_line"
            android:layout_width="@dimen/y618"
            android:layout_height="@dimen/y618"
            android:layout_alignBottom="@+id/iv_one"
            android:layout_centerHorizontal="true"
            android:rotation="90" />

        <ImageView
            android:layout_width="@dimen/y618"
            android:layout_height="@dimen/y618"
            android:layout_alignBottom="@+id/iv_one"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/exercise_1_two_background" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_with_line2"
            android:layout_width="@dimen/y534"
            android:layout_height="@dimen/y534"
            android:layout_alignBottom="@+id/iv_one"
            android:layout_centerHorizontal="true"
            android:rotation="90" />

        <ImageView
            android:layout_width="@dimen/y618"
            android:layout_height="@dimen/y618"
            android:layout_alignBottom="@+id/iv_one"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/exercise_1_three_background" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_with_line3"
            android:layout_width="@dimen/y423"
            android:layout_height="@dimen/y423"
            android:layout_alignBottom="@+id/iv_one"
            android:layout_centerHorizontal="true"
            android:rotation="90" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/y275"
            android:layout_height="@dimen/y275"
            android:layout_alignBottom="@+id/iv_one"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fy10"
            android:scaleType="fitCenter"
            android:src="@drawable/exercise_1_four_background" />

        <!--
                 阴影1 
            256.4
        -->

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/y567"
            android:layout_height="@dimen/y567"
            android:layout_alignLeft="@+id/pie_chart_with_line2"
            android:layout_alignTop="@+id/pie_chart_with_line2"
            android:layout_marginLeft="@dimen/fy17"
            android:layout_marginTop="@dimen/fy17"
            android:background="@drawable/exercise_1_shadow"
            android:scaleType="fitCenter" />

        <!--
                 阴影2 
            203
        -->

        <ImageView
            android:layout_width="@dimen/y449"
            android:layout_height="@dimen/y449"
            android:layout_alignLeft="@+id/pie_chart_with_line3"
            android:layout_alignTop="@+id/pie_chart_with_line3"
            android:layout_marginLeft="@dimen/fy14"
            android:layout_marginTop="@dimen/fy14"
            android:background="@drawable/exercise_1_shadow"
            android:scaleType="fitCenter" />

        <!--
                 圆环
            296.6
        -->

        <ImageView
            android:id="@+id/iv_exercise_1_one_ring"
            android:layout_width="@dimen/y640"
            android:layout_height="@dimen/y640"
            android:layout_alignLeft="@+id/pie_chart_with_line"
            android:layout_alignTop="@+id/pie_chart_with_line"
            android:layout_marginLeft="@dimen/fy12"
            android:layout_marginTop="@dimen/fy12"
            android:background="@drawable/exercise_1_one_ring"
            android:scaleType="fitCenter" />

        <!-- 坐 -->

        <TextView
            android:id="@+id/tv_sit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pie_chart_with_line2"
            android:layout_centerHorizontal="true"
            android:text="00:00:00"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/y26"
            android:layout_height="@dimen/y34"
            android:layout_above="@+id/tv_sit"
            android:layout_centerHorizontal="true"
            android:src="@drawable/exercise_sit" />
        <!-- 坐 -->


        <!-- 站 -->

        <TextView
            android:id="@+id/tv_stand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pie_chart_with_line3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y21"
            android:text="00:00:00"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/y13"
            android:layout_height="@dimen/y31"
            android:layout_above="@+id/tv_stand"
            android:layout_centerHorizontal="true"
            android:src="@drawable/exercise_sta" />
        <!-- 站 -->


        <!-- 走 -->

        <TextView
            android:id="@+id/tv_step_fre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_step_fre"
            android:layout_centerHorizontal="true"
            android:text="0 步"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y34"
            android:layout_above="@+id/tv_step"
            android:layout_centerHorizontal="true"
            android:src="@drawable/exercise_walk" />
        <!-- 走 -->


        <!-- 卡路里 -->

        <TextView
            android:id="@+id/tv_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_one"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y58"
            android:text=" 大卡"
            android:textColor="@android:color/holo_blue_bright" />

        <!-- 卡路里 -->


        <!-- 其他 -->

        <TextView
            android:id="@+id/tv_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_walk"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sit_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_walk"
            android:text="tv_sit_cal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_stand_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_sit_cal"
            android:text="tv_stand_cal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_walk_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_stand_cal"
            android:text="tv_walk_cal"
            android:visibility="gone" />
        <!-- 其他 -->

        <TextView
            android:id="@+id/tv_total_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_cal"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/rl_exercise_bind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y67"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_exercise_bind"
                android:layout_width="@dimen/y250"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/exercise_bind" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>