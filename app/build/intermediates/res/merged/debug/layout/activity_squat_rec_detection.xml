<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/head_title" />

    <include
        android:id="@+id/bind_step_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/service_test_title"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_scan_shoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_scan_shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/loadingpic" />

            <TextView
                android:id="@+id/tv_scanshoes_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_stand_posture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/squat_posture" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_stand_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通过"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_stand_tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“蹲一蹲”"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_stand_tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可知道"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_stand_tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="足部健康"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_squat_guidance"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/conner_solid_green_grass_rectangle_radius_3dp"
                    android:text="查看教程"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_squat_start_tip"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/conner_blue_rectangle_radius_3dp"
                    android:text="开始测试"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_squat_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="检测中需注意"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="1 请遵照语音提示保持对应的检测动作\n2 检测中，双脚请勿移动与滑动\n3 下蹲姿势中请保持缓慢与身体稳定"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="贴心提示"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:text="● 身体状态良好\n● 不能安全独立完成所要求的动作时，要注意予以保护以免摔倒，必要时给予帮助\n● 检测中，保持周围空旷，以防下蹲中重心不稳摔倒后异物碰伤自己"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_squat_start_countdown_tip"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/conner_blue_rectangle_radius_3dp"
                    android:text="开始测试"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_squat_countdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_squat_countdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/squat_countdown3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_squat_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_grass"
                android:gravity="center"
                android:padding="10dp"
                android:text="预备"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_foot_print"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/ll_shoepic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="2.6"
            android:weightSum="2" >

            <FrameLayout
                android:id="@+id/fl_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_leftshoe"
                    android:layout_width="139dp"
                    android:layout_height="415dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/bind_stress_left_shoe" />

                <cn.com.amome.amomeshoes.widget.CircleView
                    android:id="@+id/canves_left"
                    android:layout_width="139dp"
                    android:layout_height="450dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_rightshoe"
                    android:layout_width="139dp"
                    android:layout_height="415dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/bind_stress_right_shoe" />

                <cn.com.amome.amomeshoes.widget.CircleView
                    android:id="@+id/canves_right"
                    android:layout_width="139dp"
                    android:layout_height="450dp"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_test_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_grass"
                android:gravity="center"
                android:padding="10dp"
                android:text="检测中"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>