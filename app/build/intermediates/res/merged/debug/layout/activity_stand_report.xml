<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/head_title" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/register_gray_light"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/y10"
                android:text="辛苦啦，经过测试发现您："
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_double_disease"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y272"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/ll_disease1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_disease1_result"
                            android:layout_width="@dimen/y167"
                            android:layout_height="@dimen/y167"
                            android:scaleType="fitCenter" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_disease1_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_disease2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/iv_disease2_result"
                            android:layout_width="@dimen/y167"
                            android:layout_height="@dimen/y167"
                            android:scaleType="fitCenter" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_disease2_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_single_disease1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y272"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_single_disease1_result"
                        android:layout_width="@dimen/y167"
                        android:layout_height="@dimen/y167"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_single_disease1_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_single_disease2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y272"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_single_disease2_result"
                        android:layout_width="@dimen/y167"
                        android:layout_height="@dimen/y167"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_single_disease2_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_no_disease"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y272"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_health"
                        android:layout_width="@dimen/y167"
                        android:layout_height="@dimen/y167"
                        android:scaleType="fitCenter"
                        android:src="@drawable/stand_health" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="正常"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title_posture_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#d9d9d9" />

                <TextView
                    android:id="@+id/tv_title_posture_report"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="您可能"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#d9d9d9" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shoulder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shoulder_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_spine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_spine_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_stand_report_more"
            android:layout_width="@dimen/y313"
            android:layout_height="@dimen/y104"
            android:background="@drawable/conner_blue_rectangle_radius_3dp"
            android:gravity="center"
            android:text="@string/squat_report_more"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>