<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="160dp"
             android:layout_height="120dp">

    <ImageView
        android:id="@+id/iv_promotion_illness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bianpingzu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_promotion_illness_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="扁平足"
            android:textColor="#37D2CA"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#37D2CA"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_promotion_fitting"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/cuo"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配件"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/iv_promotion_curing"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/dui"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="养护"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_promotion_action"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/dui"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动作"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>