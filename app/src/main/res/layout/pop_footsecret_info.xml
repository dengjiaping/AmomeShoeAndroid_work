<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_popmian"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y517"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/y42"
        android:layout_marginRight="@dimen/y42"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/y21"
            android:text=""
            android:textColor="@color/rosered"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_tip"
            android:background="@color/rosered" />

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y21"
            android:layout_alignParentBottom="true" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_bottom"
            android:layout_below="@+id/tv_tip"
            android:layout_marginTop="@dimen/y6"
            android:fadingEdge="vertical"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_info1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y21"
                    android:layout_marginRight="@dimen/y21"
                    android:gravity="center_vertical"
                    android:text="原因"
                    android:textColor="@color/rosered" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_tip"
                    android:background="@color/login_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/y21"
                    android:paddingRight="@dimen/y21"
                    android:text=""
                    android:textColor="@color/login_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_tip"
                    android:background="@color/login_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_info3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/y21"
                    android:layout_marginRight="@dimen/y21"
                    android:gravity="center_vertical"
                    android:text="建议"
                    android:textColor="@color/rosered" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_tip"
                    android:background="@color/login_gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_info4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/y21"
                    android:paddingRight="@dimen/y21"
                    android:text=""
                    android:textColor="@color/login_gray" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>