<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.amome.amomeshoes.view.main.health.promotion.finish.NursingNotFinishActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="255dp"
        android:src="@drawable/jianchi"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintHorizontal_bias="0.503"/>

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="193dp"
        android:layout_height="29dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="91dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_main"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="267dp"
        android:layout_height="52dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:gravity="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="确定"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_yuan"
        />
</android.support.constraint.ConstraintLayout>
