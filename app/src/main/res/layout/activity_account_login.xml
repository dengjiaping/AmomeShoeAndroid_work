<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/y313"
                android:layout_height="@dimen/y313"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y83"
                android:scaleType="fitXY"
                android:src="@drawable/login_logo" />

            <RelativeLayout
                android:layout_width="@dimen/y656"
                android:layout_height="@dimen/y92"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y42" >

                <ImageView
                    android:id="@+id/iv_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/et_gray_bg" />

                <EditText
                    android:id="@+id/et_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/phonenum2"
                    android:inputType="phone"
                    android:padding="@dimen/y10"
                    android:singleLine="true"
                    android:textColorHint="@color/tv_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_phonenum_logo"
                    android:layout_width="@dimen/y92"
                    android:layout_height="@dimen/y92"
                    android:padding="@dimen/y3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_phonenum" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/y656"
                android:layout_height="@dimen/y92"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y31" >

                <ImageView
                    android:id="@+id/iv_pw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/et_gray_bg" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/pw"
                    android:padding="@dimen/y10"
                    android:password="true"
                    android:singleLine="true"
                    android:textColorHint="@color/tv_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_pw_logo"
                    android:layout_width="@dimen/y92"
                    android:layout_height="@dimen/y92"
                    android:padding="@dimen/y3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_pw" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/y656"
                android:layout_height="@dimen/y92"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y42" >

                <ImageView
                    android:id="@+id/iv_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_turkeygreen_bg_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/y656"
                android:layout_height="@dimen/y92"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y42" >

                <RelativeLayout
                    android:layout_width="@dimen/y250"
                    android:layout_height="@dimen/y83"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" >

                    <ImageView
                        android:id="@+id/iv_forgetpw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_short_turkeygreen_bg_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="@dimen/y10"
                        android:text="@string/forgetpw"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/y250"
                    android:layout_height="@dimen/y83"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" >

                    <ImageView
                        android:id="@+id/iv_register_now"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_short_turkeygreen_bg_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="@dimen/y10"
                        android:text="@string/register_now"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </RelativeLayout>
