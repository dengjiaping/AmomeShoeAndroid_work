<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/y21"
    tools:context=".ui.MainFragmentActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y6"
            android:layout_weight="1"
            android:background="@drawable/conner_stroke_green_grass_solid_white_rectangle_radius_3dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/y10"
                android:text="足部报告"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_foot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/report_foot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y6"
            android:layout_weight="1"
            android:background="@drawable/conner_stroke_green_grass_solid_white_rectangle_radius_3dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/y10"
                android:text="姿态报告"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_posture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/report_posture" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y6"
            android:layout_weight="1"
            android:background="@drawable/conner_stroke_green_grass_solid_white_rectangle_radius_3dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/y10"
                android:text="平衡报告"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/report_balance" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y6"
            android:layout_weight="1"
            android:background="@drawable/conner_stroke_green_grass_solid_white_rectangle_radius_3dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/y10"
                android:text="步态报告"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_walk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/report_walk" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>