<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context=".ui.exercise.ExerciseFragment" >

    <FrameLayout
        android:id="@+id/fragment_exercisemotion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/tabone"
                android:layout_width="@dimen/y104"
                android:layout_height="@dimen/y104"
                android:background="@drawable/rb_today" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/tabtwo"
                android:layout_width="@dimen/y104"
                android:layout_height="@dimen/y104"
                android:background="@drawable/rb_gray_yesterday" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </View>

</LinearLayout>