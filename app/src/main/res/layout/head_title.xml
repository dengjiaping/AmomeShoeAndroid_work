<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y115"
    android:background="@android:color/white"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/y21"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/y21"
        android:padding="@dimen/y10"
        android:textColor="@color/register_blue"
        android:textSize="16sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/y63"
        android:layout_height="@dimen/y63"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/y21"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/y63"
            android:layout_height="@dimen/y63"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/y21"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_left"
            android:padding="@dimen/y10"
            android:textColor="@color/register_blue"
            android:textSize="16sp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>