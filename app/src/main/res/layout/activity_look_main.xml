<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/head_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y42"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/y10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/look_footsize_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_shap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/y10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/look_footshap_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_print"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/y10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/look_footprint_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/y10"
                    android:scaleType="fitStart"
                    android:src="@drawable/look_footcolor_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/y10" >

                    <ImageView
                        android:id="@+id/iv_pain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/look_footpain_gray" />

                    <TextView
                        android:id="@+id/tv_painnum"
                        android:layout_width="@dimen/y52"
                        android:layout_height="@dimen/y52"
                        android:layout_alignRight="@+id/iv_pain"
                        android:layout_alignTop="@+id/iv_pain"
                        android:background="@drawable/circle_red"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/y10" >

                    <ImageView
                        android:id="@+id/iv_diseas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="fitStart"
                        android:src="@drawable/look_footdiseas_gray" />

                    <TextView
                        android:id="@+id/tv_diseasnum"
                        android:layout_width="@dimen/y52"
                        android:layout_height="@dimen/y52"
                        android:layout_alignRight="@+id/iv_diseas"
                        android:layout_alignTop="@+id/iv_diseas"
                        android:background="@drawable/circle_red"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/y656"
            android:layout_height="@dimen/y92"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y63" >

            <ImageView
                android:id="@+id/iv_look"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_turkeygreen_bg_selector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="查看"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tip_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_ok"
            android:layout_marginLeft="@dimen/y52"
            android:layout_marginRight="@dimen/y52"
            android:layout_marginTop="@dimen/y42"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魔秘提示：“"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:textColor="@color/turkeygreen"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="”中可以查看所有脚部信息，点击脚痛"
                android:textColor="@android:color/black"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tip_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip_ll1"
            android:layout_marginTop="1dp"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y17"
                android:text="脚疾症状可知症状分析"
                android:textColor="@android:color/black"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>