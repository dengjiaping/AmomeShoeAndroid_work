<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <!--大图-->
        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/weijiazai_zubu"/>

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/houtui_white"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="扁平足"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@drawable/more_white"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">




        <!--运动训练-->
        <LinearLayout
            android:id="@+id/ll_training"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#FAFAFA"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_training"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/xunlian"/>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="6"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:text="运动训练"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tv_training_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="已完成 （"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_training_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="项）"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_training_enter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:src="@drawable/begin_btn"/>

        </LinearLayout>

        <!--健康配件-->
        <LinearLayout
            android:id="@+id/ll_fitting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#FAFAFA"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fitting"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/peijian"/>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="6"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:text="健康配件"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tv_fitting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="已穿戴 （"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_fitting_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="件）"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_fitting_enter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:src="@drawable/begin_btn"/>

        </LinearLayout>
        <!--日常养护-->
        <LinearLayout
            android:id="@+id/ll_nursing"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#FAFAFA"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nursing"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/yanghu"/>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="6"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:text="日常养护"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tv_nursing_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="已完成 （"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_nursing_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="项）"
                        android:textColor="#37D2CA"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_nursing_enter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:src="@drawable/begin_btn"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>

